<base:BaseView  xmlns:base="clr-namespace:ElvUIDownloader.Views.Base" x:Class="ElvUIDownloader.Views.AddProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:ElvUIDownloader.ViewModels"
             xmlns:helpers="clr-namespace:ElvUIDownloader.Utils"
             xmlns:converters="clr-namespace:ElvUIDownloader.Utils.Converters"
             mc:Ignorable="d"
             WindowStartupLocation="CenterOwner"
             ui:WindowHelper.UseModernWindowStyle="True"
             ui:WindowHelper.FixMaximizedWindow ="False"
             helpers:DialogResultHelper.DialogResult="{Binding DialogResult, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
             Title="{Binding Path=Title, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
             d:DataContext="{d:DesignInstance viewModels:AddProfileViewModel}"
             Width="600"
             Height="550"
             d:DesignHeight="400" d:DesignWidth="600">
    <base:BaseView.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </base:BaseView.Resources>
    <Grid Margin="15 15 5 15">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0 0 20 0">
            <StackPanel Orientation="Vertical" CanVerticallyScroll="True">
                <TextBlock Margin="10 20 0 5" Text="Наименование профиля"/>
                <TextBox Margin="10 0 0 0" Text="{Binding Profile.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                <TextBlock Margin="10 20 0 5" Text="Путь к игре Word of Warcraft"/>
                <CheckBox Margin="10 0 0 5" IsChecked="{Binding Path=IsManualSelectDirectory, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" >Указать дирректорию вручную</CheckBox>
                <ComboBox Margin="10 0 0 5" HorizontalAlignment="Stretch" IsEnabled="{Binding Path=IsManualSelectDirectory, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource InverseBooleanConverter}}" ItemsSource="{Binding Path=InstalledWows, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding Path=SelectedInstalledWow, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                <Grid Margin="10 5 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox IsEnabled="{Binding Path=IsManualSelectDirectory, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Center" Text="{Binding Profile.InstallLocation, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    <Button IsEnabled="{Binding Path=IsManualSelectDirectory, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="3 0 0 0" Grid.Column="1" ToolTip="Выбрать директорию" Command="{Binding Path=SelectFolderCommand}">...</Button>
                </Grid>
                <TextBlock Margin="10 0 0 5" Text="Тип игры"/>
                <ComboBox Margin="10 0 0 0" HorizontalAlignment="Stretch" SelectedItem="{Binding Profile.Type, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" ItemsSource="{Binding Path=Types, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                <CheckBox Margin="10 20 0 0" IsChecked="{Binding Path=Profile.IsForceUpdate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">Разрешить принудительное обновление</CheckBox>
                <CheckBox Margin="10 0 0 5" IsChecked="{Binding Path=Profile.IsForceInstall, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">Разрешить переустановку</CheckBox>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Style="{StaticResource AccentButtonStyle}" Margin="10" Content="{Binding Path=OkButton, UpdateSourceTrigger=PropertyChanged, FallbackValue=OK, TargetNullValue=OK}" Command="{Binding SaveProfileCommand}" />
            <Button Margin="10" Content="Отмена" IsCancel="True" />
        </StackPanel>
    </Grid>
</base:BaseView>
